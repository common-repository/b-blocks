{
  "apiVersion": 2,
  "name": "b-blocks/mailto",
  "title": "Mail To",
  "description": "Mail with a single click.",
  "category": "bBlocks",
  "keywords": [
    "Send mail",
    "Mail us",
    "Email sending"
  ],
  "textdomain": "b-blocks",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "mailtoAlign": {
      "type": "string",
      "default": "center"
    },
    "receiverMail": {
      "type": "string",
      "default": ""
    },
    "style": {
      "type": "string",
      "default": "default"
    },
    "btn": {
      "type": "string",
      "selector": "a.mailtoButton span",
      "default": "Send E-mail"
    },
    "btnTypo": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 22,
          "tablet": 20,
          "mobile": 18
        },
        "fontWeight": 600
      }
    },
    "btnColors": {
      "type": "object",
      "default": {
        "color": "#fff",
        "bg": "#4527a4"
      }
    },
    "btnHovColors": {
      "type": "object",
      "default": {
        "color": "#fff",
        "bg": "#8344c5"
      }
    },
    "btnPadding": {
      "type": "object",
      "default": {
        "vertical": "18px",
        "horizontal": "45px"
      }
    },
    "btnBorder": {
      "type": "object",
      "default": {
        "radius": "50px"
      }
    },
    "icon": {
      "type": "object",
      "default": {
        "class": "fa fa-paper-plane"
      }
    },
    "iconPosition": {
      "type": "string",
      "default": "left"
    }
  },
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true
    }
  },
  "style": [
    "file:./view.css",
    "fontAwesome"
  ],
  "render": "file:./render.php",
  "viewScript": [
    "file:./view.js",
    "mailtoui"
  ]
}